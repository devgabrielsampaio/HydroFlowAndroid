    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Principal"
    android:background="#00009c">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        style="@style/button"
        android:background="@drawable/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Controle"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="103dp"
        android:layout_marginTop="200dp"
        android:textColor="#00009c"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        style="@style/button"
        android:background="@drawable/button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Medição"
        android:drawableLeft="@drawable/ic_baseline_water_drop_24"
        android:textColor="#00009c"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        style="@style/button"
        android:background="@drawable/button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:drawablePadding="-40dp"
        android:textColor="#00009c"
        android:drawableLeft="@drawable/ic_baseline_person_2"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="248dp" />


